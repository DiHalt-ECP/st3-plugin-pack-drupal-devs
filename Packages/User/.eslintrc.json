{
  // ES6 and NODEjs.
  // Global Config.
  "root": true,
  "extends": [
    "airbnb-base"
  ],
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "globals": {
    "Drupal": true,
    "drupalSettings": true,
    "drupalTranslations": true,

    "jQuery": true,
    "matchMedia": true,
    "Backbone": true,
    "Modernizr": true,
    "CKEDITOR": true,

    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
    // "ecmaFeatures": {
