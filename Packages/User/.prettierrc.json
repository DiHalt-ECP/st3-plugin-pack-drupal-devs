{
  "bracketSpacing": true,
  "endOfLine": "lf",
  "printWidth": 80,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "all",
  "tabWidth": 2,

  "overrides": [{
      "files": ["*.html", "*.htm"],
      "options": {
        "parser": "html"
      }
    },
    {
      "files": ["*.js"],
      "options": {
        "parser": "babel"
      }
    },
    {
      "files": ["*.json"],
      "options": {
        "parser": "json",
        "tabWidth": 4
      }
    }
  ]
}
